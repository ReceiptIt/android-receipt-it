<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_tiny">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_receipt_product_list_add_product_header"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintHorizontal_bias="0.1"
                  android:layout_marginTop="@dimen/margin_small"
                  android:text="@string/receipt_list_add_receipt_manually_header"/>

        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_receipt_product_list_add_product_header_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_receipt_product_list_add_product_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tv_receipt_product_list_add_product_header"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_receipt_list_add_receipt_manually_purchase_date_label"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toLeftOf="@id/tl_receipt_list_add_receipt_manually_purchase_date_layout"
                  app:layout_constraintHorizontal_bias="0.2"
                  app:layout_constraintTop_toTopOf="@id/tl_receipt_list_add_receipt_manually_purchase_date_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_receipt_list_add_receipt_manually_purchase_date_layout"
                  android:textSize="16sp"
                  android:text="@string/receipt_list_add_receipt_manually_purchase_date"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                android:id="@+id/tl_receipt_list_add_receipt_manually_purchase_date_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintTop_toBottomOf="@id/v_receipt_product_list_add_product_header_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/ed_receipt_list_add_receipt_manually_purchase_date_value"/>
        </com.google.android.material.textfield.TextInputLayout>


        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_receipt_list_add_receipt_manually_purchase_date_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_receipt_product_list_add_product_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_receipt_list_add_receipt_manually_purchase_date_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_receipt_list_add_receipt_manually_total_amount_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_receipt_list_add_receipt_manually_purchase_date_label"
                  app:layout_constraintTop_toTopOf="@id/tl_receipt_list_add_receipt_manually_total_amount_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_receipt_list_add_receipt_manually_total_amount_layout"
                  android:textSize="16sp"
                  android:text="@string/receipt_list_add_receipt_manually_total_amount"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                android:id="@+id/tl_receipt_list_add_receipt_manually_total_amount_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_receipt_list_add_receipt_manually_purchase_date_layout"
                app:layout_constraintTop_toBottomOf="@id/v_receipt_list_add_receipt_manually_purchase_date_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType = "numberDecimal"
                    android:id="@+id/ed_receipt_list_add_receipt_manually_total_amount_value"/>
        </com.google.android.material.textfield.TextInputLayout>


        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_receipt_list_add_receipt_manually_total_amount_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_receipt_product_list_add_product_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_receipt_list_add_receipt_manually_total_amount_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_receipt_list_add_receipt_manually_merchant_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_receipt_list_add_receipt_manually_total_amount_label"
                  app:layout_constraintTop_toTopOf="@id/tl_receipt_list_add_receipt_manually_merchant_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_receipt_list_add_receipt_manually_merchant_layout"
                  android:textSize="16sp"
                  android:text="@string/receipt_list_add_receipt_manually_merchant"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                android:id="@+id/tl_receipt_list_add_receipt_manually_merchant_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_receipt_list_add_receipt_manually_total_amount_layout"
                app:layout_constraintTop_toBottomOf="@id/v_receipt_list_add_receipt_manually_total_amount_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_receipt_list_add_receipt_manually_merchant_value"/>
        </com.google.android.material.textfield.TextInputLayout>


        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_receipt_list_add_receipt_manually_merchant_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_receipt_product_list_add_product_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_receipt_list_add_receipt_manually_merchant_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_receipt_list_add_receipt_manually_postcode_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_receipt_list_add_receipt_manually_merchant_label"
                  app:layout_constraintTop_toTopOf="@id/tl_receipt_list_add_receipt_manually_postcode_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_receipt_list_add_receipt_manually_postcode_layout"
                  android:textSize="16sp"
                  android:text="@string/receipt_list_add_receipt_manually_postcode"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                android:id="@+id/tl_receipt_list_add_receipt_manually_postcode_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_receipt_list_add_receipt_manually_merchant_layout"
                app:layout_constraintTop_toBottomOf="@id/v_receipt_list_add_receipt_manually_merchant_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_receipt_list_add_receipt_manually_postcode_value"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_receipt_list_add_receipt_manually_postcode_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_receipt_product_list_add_product_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_receipt_list_add_receipt_manually_postcode_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_receipt_list_add_receipt_manually_description_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_receipt_list_add_receipt_manually_postcode_label"
                  app:layout_constraintTop_toBottomOf="@id/v_receipt_list_add_receipt_manually_postcode_divider"
                  android:layout_marginTop="@dimen/margin_small"
                  android:textSize="16sp"
                  android:text="@string/receipt_list_add_receipt_manually_comment"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.9"
                android:layout_height="wrap_content"
                android:id="@+id/tl_receipt_list_add_receipt_manually_description_layout"
                app:layout_constraintLeft_toLeftOf="@id/tv_receipt_list_add_receipt_manually_description_label"
                app:layout_constraintRight_toRightOf="@id/tl_receipt_list_add_receipt_manually_postcode_layout"
                app:layout_constraintTop_toBottomOf="@id/tv_receipt_list_add_receipt_manually_description_label"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_receipt_list_add_receipt_manually_comment_value"/>
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>