<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".receiptList.CroppedReviewActivity"
        android:background="@color/black">


    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/iv_stitched_img"/>


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_re_stitch"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="RE-STITCH"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/btn_stitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            android:id="@+id/btn_send"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="SEND"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btn_stitch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/btn_dismiss"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="DISMISS"/>

</androidx.constraintlayout.widget.ConstraintLayout>