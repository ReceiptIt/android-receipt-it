<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        tools:context=".navDrawer.ExpenseCompareDatePickActivity">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_expense_compare_select_period_header"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintHorizontal_bias="0.1"
                  android:layout_marginTop="@dimen/margin_small"
                  android:text="@string/expense_compare_enter_periods_header"/>

        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_expense_compare_select_period_header_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tv_expense_compare_select_period_header"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_expense_compare_select_period_period_1_label"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toLeftOf="@id/tl_expense_compare_select_period_period_1_layout"
                  app:layout_constraintHorizontal_bias="0.2"
                  app:layout_constraintTop_toTopOf="@id/tl_expense_compare_select_period_period_1_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_expense_compare_select_period_period_1_layout"
                  android:textSize="16sp"
                  android:text="@string/expense_compare_enter_period_1_label"
                  tools:text="test"/>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/tl_expense_compare_select_period_period_1_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintTop_toBottomOf="@id/v_expense_compare_select_period_header_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/ed_expense_compare_select_period_period_1_value"/>
        </com.google.android.material.textfield.TextInputLayout>


        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_expense_compare_select_period_period_1_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_expense_compare_select_period_period_1_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_expense_compare_select_period_period_2_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_period_1_label"
                  app:layout_constraintTop_toTopOf="@id/tl_expense_compare_select_period_period_2_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_expense_compare_select_period_period_2_layout"
                  android:textSize="16sp"
                  android:text="@string/expense_compare_enter_period_2_label"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/tl_expense_compare_select_period_period_2_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_expense_compare_select_period_period_1_layout"
                app:layout_constraintTop_toBottomOf="@id/v_expense_compare_select_period_period_1_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/ed_expense_compare_select_period_period_2_value"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_expense_compare_select_period_period_2_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_expense_compare_select_period_period_2_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_expense_compare_select_period_period_3_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_period_2_label"
                  app:layout_constraintTop_toTopOf="@id/tl_expense_compare_select_period_period_3_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_expense_compare_select_period_period_3_layout"
                  android:textSize="16sp"
                  android:text="@string/expense_compare_enter_period_3_label"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/tl_expense_compare_select_period_period_3_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_expense_compare_select_period_period_2_layout"
                app:layout_constraintTop_toBottomOf="@id/v_expense_compare_select_period_period_2_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/ed_expense_compare_select_period_period_3_value"/>
        </com.google.android.material.textfield.TextInputLayout>


        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_expense_compare_select_period_period_3_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_expense_compare_select_period_period_3_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_expense_compare_select_period_period_4_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_period_3_label"
                  app:layout_constraintTop_toTopOf="@id/tl_expense_compare_select_period_period_4_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_expense_compare_select_period_period_4_layout"
                  android:textSize="16sp"
                  android:text="@string/expense_compare_enter_period_4_label"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/tl_expense_compare_select_period_period_4_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_expense_compare_select_period_period_3_layout"
                app:layout_constraintTop_toBottomOf="@id/v_expense_compare_select_period_period_3_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/ed_expense_compare_select_period_period_4_value"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_width="0dp"
              app:layout_constraintWidth_percent="0.9"
              android:layout_height="1dp"
              android:id="@+id/v_expense_compare_select_period_period_4_divider"
              android:background="@android:color/darker_gray"
              app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_header"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginEnd="@dimen/margin_medium"
              app:layout_constraintTop_toBottomOf="@id/tl_expense_compare_select_period_period_4_layout"
              android:layout_marginTop="@dimen/margin_small"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_expense_compare_select_period_period_5_label"
                  app:layout_constraintLeft_toLeftOf="@id/tv_expense_compare_select_period_period_4_label"
                  app:layout_constraintTop_toTopOf="@id/tl_expense_compare_select_period_period_5_layout"
                  app:layout_constraintBottom_toBottomOf="@id/tl_expense_compare_select_period_period_5_layout"
                  android:textSize="16sp"
                  android:text="@string/expense_compare_enter_period_5_label"
                  tools:text="test"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/tl_expense_compare_select_period_period_5_layout"
                app:layout_constraintLeft_toLeftOf="@id/tl_expense_compare_select_period_period_4_layout"
                app:layout_constraintTop_toBottomOf="@id/v_expense_compare_select_period_period_4_divider"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/ed_expense_compare_select_period_period_5_value"/>
        </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>